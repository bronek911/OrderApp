{% extends 'dashboard.html.twig' %}

{% block body %}

    <div class="col-lg-5 col-md-5">
        <div class="card">
            <div class="header">
                <h4 class="title">Wybrane produkty</h4>
            </div>
            <div class="content table-responsive">
                <table class="table table-striped">
                    <thead>
                    <th>Nazwa</th>
                    <th>Cena</th>
                    <th>Ilość</th>
                    <th>Suma</th>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Nazwa</td>
                        <td>Cena</td>
                        <td>Ilość</td>
                        <td>Suma</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td><b>Suma:</b></td>
                        <td>XXX zł</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-7 col-md-7">
        <div class="card">
            <div class="header">
                <h4 class="title">Wybrane produkty</h4>
            </div>
            <div class="content table-responsive">

                <div class="container-fluid">
                    <div class="row">


                        {% for product in products %}
                            <div class="col-xl-2 col-lg-3 col-md-3 col-sm-3 col-xs-4">
                                <div class="card">

                                    <div class="thumbnail" id="product{{ product.id }}" data-product-id="{{ product.id }}" data-product-name="{{ product.name }}" data-product-price="{{ product.price }}" data-product-price-kg="{{ product.priceKg }}">
                                        <a href="#" data-toggle="modal" data-target="#myModal">
                                            <img src="https://www.w3schools.com/bootstrap/img_avatar1.png" alt="Lights"
                                                 style="width:100%">
                                            <div class="caption">
                                                <p>
                                                    <small><b>{{ product }}</b></small>
                                                </p>
                                                <p>
                                                    <small><small>Ilość: <span class="quantity pull-right">0</span></small></small>
                                                </p>
                                                <p>
                                                    <small><small>Cena: <span class="price pull-right">0</span></small></small>
                                                </p>
                                            </div>
                                        </a>
                                    </div>


                                </div>
                            </div>
                        {% endfor %}


                    </div>

                </div>
            </div>
        </div>
    </div>



    <div class="col-lg-7 col-md-7">
        <div class="card">
            <div class="header">
                <h4 class="title">Utwórz nowe zlecenie</h4>
                <p class="category"><a href="{{ path('orders_index') }}">Wróć do listy</a></p>
            </div>
            <div class="content">
                <form action="{{ path('orders_new') }}" method="POST">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Imię</label>
                                <select class="form-control" id="clients_form" name="client">
                                    <option value="" selected>Wybierz klienta</option>
                                    {% for client in clients %}
                                        <option value="{{ client.id }}">{{ client.company }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>

                    <div id="product-holder">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label>Produkt</label>
                                    <select class="form-control product_form" name="product[]">

                                        <option value="null">Wybierz produkt</option>
                                        {% for product in products %}
                                            <option value="{{ product }}">{{ product }}</option>
                                        {% endfor %}

                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Ilość</label>
                                    <input class="form-control" type="number" name="quantity[]" min="0">
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="text-center">
                            <button type="submit" class="btn btn-info btn-fill btn-wd">Zapisz</button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </form>
                <br>
            </div>
        </div>
    </div>

{% endblock %}
