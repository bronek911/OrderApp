{% extends 'dashboard.html.twig' %}

{% block body %}
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <div>
                    <h4 class="title">Lista nowych zamówień &nbsp;&nbsp; <a href="{{ path('orders_new') }}" class="btn btn-success btn-fill">
                            <i class="ti-plus"></i>
                        </a></h4><br>
                </div>
                <div class="pull-right">
                </div>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-striped">
                    <thead>
                    <th>ID</th>
                    <th>Firma</th>
                    <th>Suma</th>
                    </thead>
                    <tbody>
                    {% for order in orders %}
                        <tr>
                            <td><a href="{{ path('orders_show', { 'id': order.id }) }}" class="btn btn-info
                                   btn-fill">{{ order.id }}</a></td>
                            <td>{{ order.client.company }}</td>
                            <td>{{ order.totalPrice }} zł</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">Lista zamówień wykonanych</h4>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-striped">
                    <thead>
                    <th>ID</th>
                    <th>Firma</th>
                    <th>Suma</th>
                    </thead>
                    <tbody>
                    {% for orderDone in ordersDone %}
                        <tr>
                            <td><a href="{{ path('orders_show', { 'id': orderDone.id }) }}" type="submit"
                                   class="btn btn-info btn-fill">{{ orderDone.id }}</a></td>
                            <td>{{ orderDone.client.company }}</td>
                            <td>{{ orderDone.totalPrice|number_format(2) }} zł</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>


{% endblock %}
