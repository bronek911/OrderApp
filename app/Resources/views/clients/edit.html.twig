{% extends 'dashboard.html.twig' %}

{% block body %}
    {% set error = 0 %}

    {% if app.session.flashBag.get('error') == true %}
        {% set error = 1 %}
    {% endif %}

    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">Edytuj klienta</h4>
                <p class="category">
                    <a href="{{ path('clients_index') }}">Wróć do listy</a> -
                    <a href="{{ path('clients_show', { 'id': client.id }) }}">Wyświetl tego klienta</a>
                </p>
            </div>
            <div class="content">
                <form action="" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Imię</label>
                                <input type="text" class="form-control border-input" name="name" placeholder="Imię" value="{{ client.name }}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Nazwisko</label>
                                <input type="text" class="form-control border-input" name="surname" placeholder="Nazwisko" value="{{ client.surname }}">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label>Nazwa firmy</label>
                                <input type="text" class="form-control border-input" name="company" placeholder="Nazwa firmy" value="{{ client.company }}">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group {% if error == 1 %}has-error{% endif %}">
                                <label>NIP {% if error == 1 %}(już istnieje w bazie danych!){% endif %}</label>
                                <input type="text" class="form-control border-input" name="nip" placeholder="NIP" value="{{ client.nip }}">
                            </div>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-info btn-fill btn-wd">Zapisz</button>
                    </div>
                    <br>
                    <div class="clearfix"></div>
                </form>
                <div class="row">
                    <div class="text-center">
                        {{ form_start(delete_form) }}
                        <button type="submit" class="btn btn-danger btn-fill btn-wd" value="Delete">Usuń</button>
                        {{ form_end(delete_form) }}
                    </div>
                </div>
                <br>
            </div>
        </div>
    </div>

    {% set error = 0 %}
{% endblock %}
