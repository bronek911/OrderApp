{% extends 'dashboard.html.twig' %}

{% block body %}
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <div>
                    <h4 class="title">Lista klient√≥w &nbsp;&nbsp; <a href="{{ path('clients_new') }}" class="btn btn-success btn-fill">
                            <i class="ti-plus"></i>
                        </a></h4><br>
                </div>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-striped">
                    <thead>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Company</th>
                    <th>Nip</th>
                    </thead>
                    <tbody>
                    {% for client in clients %}
                        <tr>
                            <td><a href="{{ path('clients_show', { 'id': client.id }) }}" class="btn btn-info
                                   btn-fill">{{ client.id }}</a></td>
                            <td>{{ client.name }}</td>
                            <td>{{ client.surname }}</td>
                            <td>{{ client.company }}</td>
                            <td>{{ client.nip }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>


{% endblock %}
